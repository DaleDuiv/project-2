{{#each exercises as |exercise|}}
<div class="container">
  <div class="container-left">
    <p>add exercise list here</p>
    <ul>
      <li>Squats</li>
      <li>add another exercise</li>

    </ul>
  </div>
  {{/each}}
 <!-- Button trigger modal -->
<button type="submit" class="btn btn-primary" href="#" data-toggle="modal" data-target="#exampleModal">
  New Exercise
</button>

<!-- Modal -->

<div class="modal  fade" id="exampleModal" tabindex="-1" role="dialog"  aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">New Exercise</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div class="form-group">
          <input type="text" class="form-control" id="exerciseName" placeholder="Enter Exercise Name">
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary" id="submitBtn">Save</button>
      </div>
    </div>
  </div>
</div>

  {{#each sets as |set|}} 
  <div class="container-right" style="border-style: dashed;border-width: thick; ">
    <h2>Current exercise</h2>
    <span>{{set.day}}</span>
    <ul><li>6th Dec 2022</li>
    <li>16:30: 10 Reps ... 10 Kilograms</li>
    </ul>
    
   {{/each}}
  <!-- Add new Set button-->
  <button type="submit" class="btn btn-primary" href="#" data-toggle="modal" data-target="#newSet">
  New Set
</button>
<!-- Modal -->

<div class="modal  fade" id="newSet" tabindex="-1" role="dialog"  aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="newSetLabel">New Set</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div class="form-group">
          <input type="text" class="form-control" id="repsData" placeholder="No of reps completed">
          <input type="text" class="form-control" id="weightData" placeholder="Weight">
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary" id="submitSetBtn">Save</button>
      </div>
    </div>
  </div>
</div>
</div>

