{{!-- <div class="container"> --}}
  <div class="container">
    <h3>Select an exercise from the list to view or record your progress</h3>
    <ul>
      {{#each user.exercises as |exercise|}}
      <li><a href="/{{exercise.id}}">{{exercise.exerciseName}}</a></li>
      {{/each}}
      </ul>

  <!-- Button trigger modal -->
 <h3>Would you like to add a new exercise?</h3>
<button type="submit" class="btn btn-warning" href="#" data-toggle="modal" data-target="#exampleModal">
  New Exercise
</button>

<!-- Modal -->

<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog"  aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title " id="exampleModalLabel">New Exercise</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div class="form-group">
          <input type="text" class="form-control" id="exerciseName" placeholder="Enter Exercise Name">
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-warning" id="submitBtn">Save</button>
      </div>
    </div>
  </div>
</div>
</div>
