{{!-- <div class="container"> --}}
  <div class="container d-grid gap-2 col-4 mx-auto ">
    <h2>What would you like to do?</h2>
    <div class="d-grid gap-2 col-6 btn-group-vertical">
      <h4>Select an exercise and record your progress</h4>
    <div class="list-group overflow-auto">
      {{#each user.exercises as |exercise|}}
      <a href="/{{exercise.id}}"><button class="list-group-item list-group-item-action list-group-item-dark ">{{exercise.exerciseName}}</button></a>
      {{/each}}
      </div>
      <!-- Button trigger modal -->
 <h4>Would you like to add a new exercise?</h4>
<button type="submit" class="btn btn-warning" href="#" data-toggle="modal" data-target="#exampleModal">
  New Exercise
  

    </div>
   </button> 
  

<!-- Modal -->

<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog"  aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title " id="exampleModalLabel">New Exercise</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div class="form-group">
          <input type="text" class="form-control" id="exerciseName" placeholder="Enter Exercise Name">
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-warning" id="submitBtn">Save</button>
      </div>
    </div>
  </div>
</div>
</div>
