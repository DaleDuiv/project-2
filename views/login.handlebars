<div class="row" id="user-container">
  <div class="container-local  row">
    <div class="col-md-6">
      <h2>Login</h2>

      <form class="form login-form">
        <div class="form-group">
          <label for="email-login">Email:</label><br>
          <input class="form-input" type="text" id="email-login" />
        </div>
        <div class="form-group">
          <label for="password-login">Password:</label><br>
          <input class="form-input" type="password" id="password-login" />
        </div><br>
        <p class="none" id="pass-err"></p>
        <div class="form-group">
          <button class="btn btn-warning" id="login-button" type="submit">Login</button>
        </div>
      </form>
    </div>
    <div class="col-md-6">
      <h2>Sign Up</h2>

      <form class="form signup-form">
        <div class="form-group">
          <label for="name-signup">Name:</label><br>
          <input class="form-input" type="text" id="name-signup"/>
        </div>
        <div class="form-group">
          <label for="email-signup">Email:</label><br>
          <input class="form-input" type="text" id="email-signup"/>
        </div>
        <div class="form-group">
          <label for="password-signup">Password:</label><br>
          <input class="form-input" type="password" id="password-signup"/>
        </div><br>
        <p class="none" id="sign-err"></p>
        <div class="form-group">
          <button class="btn btn-warning" id="signup-button" type="submit">Sign Up</button>
        </div>
      </form>
    </div>
  </div>
</div>

<script src="../js/login.js"></script>
