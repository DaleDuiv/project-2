<div class="container-fluid">
  <div class="row">
    <div class="col-4">
      <h4>My exercises</h4>
      <div class="list-group">
       {{#each exercises as |exercise|}}
      <a class="list-group-item list-group-item-action list-group-item-dark" href="/{{exercise.id}}">{{exercise.exerciseName}}</a>
      {{/each}}
      </div>
    </div>
   
  <div class="col-8">
    <h4>My Exercise Log</h4>
     <p>{{exercise.exerciseName}}</p> 
     
    {{#if sets}}
    {{#each sets as |set|}}

      
     
      <ul class="list-group">
     <li class="list-group-item"> <span class="d-inline-block text-truncate" style="max-width: 238px;">{{set.date_created}}</span>
     </li>
      <li class="list-group-item">{{set.reps}} Reps, {{set.weight}} Kg</li>
      <span aria-hidden="true">&nbsp;</span>
      </ul>
      {{/each}}
     {{else}}
     <p>Sorry no data was found!</p>
     {{/if}} 
  <!-- Add new Set button-->
   
      <button type="submit" class="btn btn-warning" href="#" data-toggle="modal" data-target="#newSet">
      New Set
      </button>
    </div>
<!-- Modal -->
    <div class="modal  fade" id="newSet" tabindex="-1" role="dialog"  aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="newSetLabel">New Set</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <div class="form-group">
            <input type="text" class="form-control" id="repsData" placeholder="Reps completed"><br/>
            <input type="text" class="form-control" id="weightData" placeholder="Weight">
            </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            <button type="button" class="btn btn-warning" id="submitSetBtn">Save</button>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>



